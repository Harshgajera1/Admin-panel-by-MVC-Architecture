
 <style>
    .form-control-image{
        width: 50%;
        display: flex;
    }
    .update_img{
        display: flex;
        justify-content: space-around;
    }
 </style>

 <div class="page-wrapper">
        <div class="page-breadcrumb">
          <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
              <h4 class="page-title">Update Form</h4>   
              <!-- <h4 class="page-title"><%= Admin_updetedata%></h4> -->
              <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Library
                    </li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-6">
              <div class="card">
                <form class="form-horizontal" method="post" action="/Edit_admin" enctype="multipart/form-data">
                  <div class="card-body">
                    <h4 class="card-title">Personal Info</h4>
                    <div class="form-group row">
                      <label
                        for="fname"
                        class="col-sm-3 text-end control-label col-form-label" 
                        >Full Name</label
                      >
                      <div class="col-sm-9">
                        <input
                          type="text"
                          class="form-control"
                          id="Fullname" name="Fullname"
                          placeholder="First Name Here" value="<%= Admin_updetedata.Name%>"
                        />
                        <input type="hidden" name="id" value="<%= Admin_updetedata.id %>">
                      </div>
                    </div>

                    <% genders = ['Male', 'Female','Other'] %>
                    <div class="form-group row">
                      <label
                        for="lname"
                        class="col-sm-3 text-end control-label col-form-label" 
                        >Select Gender</label
                      >
                      <div class="col-sm-9">
                        <% for(var i=0; i<genders.length; i++){%>
                            <input
                            type="radio"
                            class="form-check-input"
                            id="customControlValidation2"
                            value="<%= genders[i] %>" name="Gender" <% if(Admin_updetedata.Gender ==  genders[i] ){%> <%= 'checked' %>  <%} %>
                            required
                          />
                          <label
                            class="form-check-label mb-0"
                            for="customControlValidation2"
                            ><%= genders[i] %></label
                          >&nbsp;&nbsp;&nbsp;
                        <%} %>
                    
                      </div>
                    </div>


                    <% hobbys = ['Swimming','Dancing','Speaking','Coding','Other'] %>
                     <div class="form-group row">
                      <label
                        for="lname"
                        class="col-sm-3 text-end control-label col-form-label"
                        >Hobby</label
                      >
                      <div class="col-sm-9">
                        <% for(var i=0; i<hobbys.length; i++){%>
                          <input
                            type="checkbox"
                            class="form-check-input"
                            id="customControlAutosizing1" name="Hobby[]" value="<%= hobbys[i] %>" 
                            <% if(Admin_updetedata.Hobby.includes(hobbys[i])){%> <%= 'checked' %>  <%} %>
                          />
                          <label
                            class="form-check-label mb-0"
                            for="customControlAutosizing1"
                            ><%= hobbys[i] %></label
                          >&nbsp;&nbsp;&nbsp;
                        <%} %>
                      </div>
                    </div>

                    <div class="form-group row">
                      <label
                        for="email1"
                        class="col-sm-3 text-end control-label col-form-label"
                        >Select City</label
                      >
                      <% city = ['Ahmedabad','Surat','Vadodara','Rajkot','Bhavnagar','Gandhinagar'] %>
                      <div class="col-sm-9">
                        <select class="select2 form-select shadow-none" style="width: 100%; height: 36px" name="City">
                           <option value="">-- Select City --</option>
                            <% for(var i=1; i<city.length; i++){%>
                              <option value="<%= city[i] %>" <% if(Admin_updetedata.City == city[i]){%> <%= 'selected' %> <%} %>><%= city[i] %></option>
                           <% } %>
                        </select>
                      </div>
                    </div>
                    
                    <div class="form-group row">
                      <label
                        for="cono1"
                        class="col-sm-3 text-end control-label col-form-label"
                        >Description</label
                      >
                      <div class="col-sm-9">
                        <textarea class="form-control" id="Description" name="Description"><%= Admin_updetedata.Description %></textarea>
                      </div>
                    </div>
                  </div>


                  <div class="form-group row">
                      <label class="col-sm-3 text-end control-label col-form-label"
                        >Upload Images</label
                      >
                      <div class="col-sm-9 update_img">
                        <img src="<%= Admin_updetedata.Image %>" height="100">
                        <input
                          type="file"
                          class="form-control form-control-image"
                          id="cono1" name="Image"
                        />
                      </div>
                    </div>
                    

                  <div class="border-top">
                    <div class="card-body">
                      <button type="submit" value="Submit" name="Submit" class="btn btn-primary">
                        Submit
                      </button>
                    </div>
                  </div>
                </form>
              </div>
              
            
           
          </div>
          <!-- editor -->
          </div>
        </div>